<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.example.quizapplication.ui.custom_view.RectCustomView
        android:id="@+id/bgCustomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:background_color="@color/bg_color"
        app:background_radius="0"
        android:scaleY="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.31"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/homeWelcomeCardView"
        android:layout_marginTop="60dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/button_color"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@id/bgCustomView"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintStart_toStartOf="@id/bgCustomView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.81" />

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@id/homeWelcomeCardView"
        app:layout_constraintEnd_toEndOf="@id/homeWelcomeCardView"
        app:layout_constraintStart_toStartOf="@id/homeWelcomeCardView"
        app:layout_constraintTop_toTopOf="@id/homeWelcomeCardView"
         />

    <TextView
        android:id="@+id/quizzesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/quiz"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeWelcomeCardView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        tools:listitem="@layout/topic_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizzesTV"
        android:layout_marginBottom="70dp"
         />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/button_color"
        android:src="@drawable/ic_log_out"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>